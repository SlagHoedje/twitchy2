{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "useDefineForClassFields": true,
        "baseUrl": ".",
        "checkJs": true,
        "types": [
            "node",
            "svelte"
        ]
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.svelte"
    ]
}
